/**
 * Implements hook_schema().
 */
function ansible_variables_schema() {
  $schema['ansible_variables'] = array(
    'fields' => array(
      'vid' => array(
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
      'nid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'ansible_variables' => array(
        'description' => 'Ansible variables to pass to the inventory, stored as YML.',
        'type' => 'text',
        'size' => 'medium',
      ),
    ),
    'indexes' => array(
      'vid' => array('vid'),
    ),
  );

  return $schema;
}
