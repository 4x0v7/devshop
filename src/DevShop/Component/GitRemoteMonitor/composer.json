{
  "name": "devshop/git-remote-monitor",
  "description": "Command line tool and daemon to read, process, and save git remote repository data.",
  "homepage": "http://www.opendevshop.com",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    { "name": "Jon Pugh", "email": "jon@thinkdrop.net" }
  ],
  "bin": [
    "git-remote-monitor"
  ],
  "require": {
    "consolidation/robo": "^2.2",
    "sebastian/diff": "^3.0",
    "shaneharter/php-daemon": "^2.0",
    "symfony/string": "^5.2",
    "symfony/translation-contracts": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "DevShop\\Component\\GitRemoteMonitor\\": "src"
    }
  },
  "config": {
    "bin-dir": "bin",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "process-timeout": 9600,
    "platform": {
      "php": "7.2.5"
    }
  },
  "scripts": {
    "cs": "bin/phpcs src tests",
    "cbf": "bin/phpcbf src tests",
    "lint": [
      "find includes -name '*.inc' -print0 | xargs -0 -n1 php -l",
      "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find tests -name '*.php' -print0 | xargs -0 -n1 php -l"
    ],
    "test": [
      "@lint",
      "@phpunit",
      "@cs"
    ],
    "phpunit": "php -d sendmail_path='true' bin/phpunit --colors=always tests"
  },
  "extra": {
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.5"
  }
}
