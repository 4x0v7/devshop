#!/usr/bin/env bash
set -e
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
PATH="$DIR:$PATH"

# Detect systemD
# @TODO: Support other paths.
if [ -f "/lib/systemd/systemd" ]; then
  COMMAND="/lib/systemd/systemd"
fi
devshop-line
echo "Initiating with $COMMAND ..."
devshop-line
exec $COMMAND
