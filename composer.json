{
    "name": "devshop/cli",
    "description": "Command Line interface for DevShop",
    "require": {
        "knplabs/github-api": "^1.4",
        "cpliakas/git-wrapper": "1.*",
        "asm/php-ansible": "^2.0",
        "consolidation/robo": "^2",
        "mouf/nodejs-installer": "^1.0",
        "php": "^7.1"
    },
    "require-dev": {
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jonpugh/MonorepoBuilder"
        }
    ],
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "jon@thinkdrop.net"
        }
    ],
    "autoload": {
        "psr-0": { "DevShop": "src/" }
    },
    "bin": [
        "devshop"
    ],
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.2"
        },
        "sort-packages:": "true"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "split": [
            "DevShop\\Composer::splitRepos"
        ],
        "post-install-cmd": [
            "DevShop\\Composer::installBins"
        ],
        "post-update-cmd": [
            "DevShop\\Composer::installBins"
        ]
    }
}
