{
    "name": "devshop/cli",
    "description": "Command Line interface for DevShop",
    "require": {
        "symfony/console": "^3.4",
        "symfony/process": "^3.4",
        "knplabs/github-api": "^1.4",
        "symfony/filesystem": "^3.4",
        "cpliakas/git-wrapper": "1.*",
        "asm/php-ansible": "v1.2.0",
        "consolidation/robo": "^1",
        "mouf/nodejs-installer": "^1.0",
        "php": "^7.1"
    },
    "require-dev": {
        "symplify/monorepo-builder": "dev-devshop"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jonpugh/MonorepoBuilder"
        },
        {
            "type": "vcs",
            "url": "https://github.com/opendevshop/php-ansible"
        }
    ],
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "jon@thinkdrop.net"
        }
    ],
    "autoload": {
        "psr-0": { "DevShop": "src/" }
    },
    "bin": [
        "devshop"
    ],
    "config": {
        "bin-dir": "bin",
        "sort-packages:": "true"
    }
}
