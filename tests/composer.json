{
  "repositories": [
    {
      "type": "artifact",
      "url": "package-under-test"
    }
  ],
  "require-dev": {
    "provision-ops/power-process": "dev-multiprocess",
    "symfony/console": "^3.0.0",
    "symfony/process": "^3.0.0"
  },
  "scripts": {
    "archive-package": [
      "mkdir -p package-under-test",
      "@composer archive --working-dir=../ --ignore-filters --dir=tests/package-under-test --file=provision-ops/power-process"
    ],
    "pre-install-cmd": "@archive-package",
    "pre-update-cmd": "@archive-package"
  }
}